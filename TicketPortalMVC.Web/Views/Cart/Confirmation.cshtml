@model Order

<div class="container mt-5">
    <h2 class="text-center mb-4">Potvrzení objednávky</h2>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <p class="fs-5"><strong>Objednávka ID:</strong> @Model.OrderId</p>
            <p class="fs-5"><strong>Datum objednávky:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
            <p class="fs-5">
                <strong>Celková částka:</strong>
                <span class="text-success">@String.Format("{0:C}", Model.Total)</span>
            </p>
        </div>
    </div>

    <h3 class="mb-3">Položky objednávky:</h3>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
        <tr>
            <th scope="col">Název vstupenky</th>
            <th scope="col">Událost</th>
            <th scope="col">Množství</th>
            <th scope="col">Cena</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.OrderTickets)
        {
        <tr>
            <td>@item.Ticket.TicketId</td> <!-- Název vstupenky místo ID? -->
            <td>@item.Ticket.EventId</td>
            <td>@item.Quantity</td>
            <td>@String.Format("{0:C}", item.Ticket.Price)</td>
        </tr>
        }
        </tbody>
    </table>

    <div class="alert alert-success mt-4 text-center" role="alert">
        <h4 class="alert-heading">Děkujeme za vaši objednávku!</h4>
    </div>
</div>
