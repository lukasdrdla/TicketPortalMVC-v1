@model List<CartItem>

@{
ViewData["Title"] = "Košík";
}

@if (TempData["Error"] != null)
{
<div class="alert alert-danger" role="alert">
    @TempData["Error"]
</div>
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Položka</th>
                <th scope="col">Cena za kus</th>
                <th scope="col">Množství</th>
                <th scope="col">Celkem</th>
                <th scope="col">Akce</th>
            </tr>
            </thead>
            <tbody>

            @foreach(var item in Model)
            {
            <tr id="cart-item-@item.CartItemId">
                <td>@item.Ticket.Event.Name</td>
                <td>@item.Ticket.Price</td>
                <td>
                    <input type="number" id="quantity-@item.CartItemId" name="quantity" value="@item.Quantity" min="1" max="100" class="quantity-input" data-cartitem-id="@item.CartItemId" data-price="@item.Ticket.Price" />
                </td>
                <td id="total-@item.CartItemId">@(@item.Ticket.Price * item.Quantity)</td>
                <td>
                    <form asp-action="RemoveFromCart" asp-controller="Cart" method="post">
                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                        <button type="submit" class="btn btn-danger">Odebrat</button>
                    </form>
                </td>
            </tr>
            }

            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="@Url.Action("Index","Events")" class="btn btn-secondary">Pokračovat v nákupu</a>
        <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary">Přejít k platbě</a>
    </div>
</div>

@section Scripts {
<script>
    // JavaScript for dynamically updating the total price when quantity changes
    document.querySelectorAll('.quantity-input').forEach(function(input) {
        input.addEventListener('input', function() {
            const cartItemId = input.getAttribute('data-cartitem-id');
            const price = parseFloat(input.getAttribute('data-price'));
            const quantity = parseInt(input.value);
            const totalCell = document.getElementById('total-' + cartItemId);

            // Calculate the new total and update the price
            if (!isNaN(quantity) && quantity >= 1) {
                totalCell.innerText = (price * quantity).toFixed(2); // Update total price
            }
        });
    });
</script>
}
