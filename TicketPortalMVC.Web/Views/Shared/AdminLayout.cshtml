@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.18.3/bootstrap-table.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />


</head>
<body>
<div class="container-fluid">
    <div class="row">
        <!-- Horní navigace pro mobilní rozložení -->
        <nav class="navbar navbar-dark bg-dark d-md-none">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <span class="navbar-brand mb-0 h1">Admin Panel</span>
        </nav>

        <!-- Boční navigace -->
        <nav class="col-md-2 bg-dark sidebar collapse d-md-block" id="sidebarMenu">
            <div class="sidebar-sticky p-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Index" asp-area="Admin" asp-controller="DashBoard">
                            <i class="bi bi-house-door-fill me-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Admin" asp-action="UserList" asp-controller="User">
                            <i class="bi bi-people-fill me-2"></i> Uživatelé
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="EventList" asp-area="Admin" asp-controller="Event">
                            <i class="bi bi-calendar3 me-2"></i> Události
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="OrderList" asp-area="Admin" asp-controller="Order">
                            <i class="bi bi-file-earmark-text-fill me-2"></i> Objednávky
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="TicketList" asp-area="Admin" asp-controller="Ticket">
                            <i class="bi bi-ticket-perforated-fill me-2"></i> Vstupenky
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="StoreList" asp-area="Admin" asp-controller="Store">
                            <i class="bi bi-shop me-2"></i> Obchody
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Events")" title="Zpět na web">
                            <i class="bi bi-arrow-left-circle-fill me-2"></i> Zpět na web
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Hlavní obsah -->
        <main class="col-md-10 ms-sm-auto px-md-4 pt-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3">
                <h1 class="h2">@ViewData["Title"]</h1>
            </div>
            <div>
                @RenderBody()
            </div>
        </main>
    </div>
</div>




    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.18.3/bootstrap-table.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
<script type="text/javascript">
        $(document).ready(function () {
            $('#users').DataTable();
        });

        $(document).ready(function () {
            $('#events').DataTable();
        });
        $(document).ready(function () {
            $('#orders').DataTable();
        });
        $(document).ready(function () {
            $('#tickets').DataTable();
        });
        
        $(document).ready(function () {
            $('#stores').DataTable();
        });
        $(document).ready(function () {
            $('#dashboard').DataTable();
        });
        
        
        
    </script>
</body>
</html>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    .sidebar {
        height: 100vh; /* Sidebar na výšku celé obrazovky */
        padding-top: 20px;
        background-color: #343a40;
        overflow-y: auto; /* Možnost scrollování */
    }

    .nav-link {
        font-size: 1.2rem;
        color: #ffffff;
        padding: 10px;
        transition: background-color 0.3s, color 0.3s;
    }

        .nav-link:hover {
            background-color: #495057;
            border-radius: 5px;
        }

    .nav-item {
        margin-bottom: 1rem;
    }

    .nav-link.active {
        background-color: #007bff;
        border-radius: 5px;
    }

    .nav-link i {
        font-size: 1.8rem;
    }

    .nav-link span {
        display: block;
        font-size: 0.85rem;
    }

    main {
        margin-left: 16.67%; /* Posun hlavního obsahu vedle sidebaru */
    }
    

    .card {
        border-radius: 20px;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        transition: background-color 0.3s ease-in-out;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-outline-secondary {
        border-color: #6c757d;
        transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #fff;
    }
    
    .card-header {
        border-radius: 20px 20px 0 0 !important;
    }

    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        overflow-y: auto;
        z-index: 1000;
    }
    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 5px;
    }


</style>

