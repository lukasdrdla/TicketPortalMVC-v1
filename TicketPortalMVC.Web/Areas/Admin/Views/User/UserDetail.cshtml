@model UserViewModel
@{
Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- User Profile Section -->
            <div class="user-profile bg-light p-4 rounded-lg shadow-lg">

                <!-- Header -->
                <div class="text-center mb-5">
                    <h1 class="display-4 text-dark">@Model.FirstName @Model.LastName</h1>
                    <p class="lead text-muted">@Model.Email</p>
                    <div class="user-id d-flex justify-content-center mt-3">
                        <span class="badge bg-info text-dark fs-6">ID: @Model.Id</span>
                    </div>
                </div>

                <!-- Personal Information Section -->
                <div class="personal-info mb-4">
                    <h4 class="text-primary mb-3">Osobní Informace</h4>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Jméno</label>
                            <div class="info-box">@Model.FirstName</div>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Přijmení</label>
                            <div class="info-box">@Model.LastName</div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Město</label>
                            <div class="info-box">@Model.City</div>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Země</label>
                            <div class="info-box">@Model.Country</div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Adresa</label>
                            <div class="info-box">@Model.Address</div>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">PSČ</label>
                            <div class="info-box">@Model.PostalCode</div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Role</label>
                            <div class="info-box">@Model.Role</div>
                        </div>
                    </div>
                </div>

                <!-- Edit Button Section -->
                <div class="d-flex justify-content-center mt-4">
                    <a href="@Url.Action("UserEdit", "User", new { id = Model.Id })" class="btn btn-primary px-4 py-2">
                        <i class="bi bi-pencil-square"></i> Upravit uživatele
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .user-profile {
        background-color: #f8f9fa;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .info-box {
        background-color: #ffffff;
        padding: 1rem;
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 1.1rem;
        color: #333;
    }

    h1 {
        font-size: 2.5rem;
        color: #333;
    }

    h4 {
        font-size: 1.5rem;
        color: #007bff;
    }

    .badge {
        font-size: 1.1rem;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        font-size: 1.1rem;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

</style>