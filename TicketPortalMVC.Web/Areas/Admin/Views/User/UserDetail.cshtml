@model UserViewModel
@{
Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container my-5">
<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-lg border-0">
            <!-- Hlavička karty -->
            <div class="card-header bg-gradient-primary text-dark text-center py-4">
                <h3 class="card-title mb-0">Detail uživatele: @Model.FirstName @Model.LastName</h3>
            </div>

            <!-- Tělo karty -->
            <div class="card-body p-4">
                <!-- Jméno -->
                <div class="mb-3">
                    <h5 class="fw-semibold">Jméno:</h5>
                    <p class="text-muted">@Model.FirstName</p>
                </div>
                    
                <!-- Příjmení -->
                <div class="mb-3">
                    <h5 class="fw-semibold">Příjmení:</h5>
                    <p class="text-muted">@Model.LastName</p>
                </div>
                    
                <!-- Email -->
                <div class="mb-3">
                    <h5 class="fw-semibold">Email:</h5>
                    <p class="text-muted">@Model.Email</p>
                </div>
                    
                <!-- Telefon -->
                <div class="mb-3">
                    <h5 class="fw-semibold">Telefon:</h5>
                    <p class="text-muted">@Model.PhoneNumber</p>
                </div>
                    
                <!-- Město -->
                <div class="mb-3">
                    <h5 class="fw-semibold">Město:</h5>
                    <p class="text-muted">@Model.City</p>
                </div>
                    
                <!-- Adresa -->
                <div class="mb-3">
                    <h5 class="fw-semibold">Adresa:</h5>
                    <p class="text-muted">@Model.Address</p>
                </div>
                    
                <!--PSČ -->
                <div class="mb-3">
                    <h5 class="fw-semibold">PSČ:</h5>
                    <p class="text-muted">@Model.PostalCode</p>
                </div>
                    
                <!-- Země -->
                <div class="mb-3">
                    <h5 class="fw-semibold">Země:</h5>
                    <p class="text-muted">@Model.Country</p>
                </div>
                    
                <!-- Role -->
                <div class="mb-3">
                    <h5 class="fw-semibold">Role:</h5>
                    <p class="text-muted">@Model.Role</p>
                </div>
                    
                    
                <!-- Akce -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-area="Admin" asp-controller="User" asp-action="UserEdit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                        <i class="bi bi-pencil"></i> Upravit
                    </a>
                    <a asp-area="Admin" asp-controller="User" asp-action="UserList" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Zpět
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>