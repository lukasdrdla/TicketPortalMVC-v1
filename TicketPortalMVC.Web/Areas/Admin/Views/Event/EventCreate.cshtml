@model EventCreateViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg">
                <!-- Hlavička karty -->
                <div class="card-header bg-gradient-primary text-dark text-center py-4">
                    <h3 class="card-title mb-0">Přidat novou událost</h3>
                </div>

                <div class="card-body py-4">
                    <form asp-area="Admin" asp-controller="Event" asp-action="EventCreate" method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label asp-for="Image" class="form-label fw-bold">Nahrát obrázek</label>
                            <input asp-for="Image" class="form-control" type="file" accept="image/*" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>


                        <div class="mb-4">
                            <label asp-for="@Model.Name" class="form-label fw-bold">Název</label>
                            <input asp-for="@Model.Name" class="form-control" required />
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="@Model.Location" class="form-label fw-bold">Lokace</label>
                            <input asp-for="@Model.Location" class="form-control" required />
                            <span asp-validation-for="@Model.Location" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="@Model.Date" class="form-label fw-bold">Datum</label>
                            <input asp-for="@Model.Date" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="@Model.Date" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="@Model.Capacity" class="form-label fw-bold">Kapacita</label>
                            <input asp-for="@Model.Capacity" class="form-control" type="number" required />
                            <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="@Model.Description" class="form-label fw-bold">Popis</label>
                            <textarea asp-for="@Model.Description" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>

                        <!-- Tlačítka -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle"></i> Uložit
                            </button>
                            <a asp-area="Admin" asp-controller="Event" asp-action="EventList" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Zpět
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
