@model Event

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="card-title mb-0">Úprava události: @Model.Name</h2>
                    <p class="card-subtitle mt-1 text-light">
                        <i class="bi bi-calendar3 me-2"></i> @Model.Date.ToString("dd.MM.yyyy HH:mm")
                    </p>
                </div>

                <div class="card-body py-4 px-5">
                    <form asp-area="Admin" asp-controller="Event" asp-action="EventEdit" method="post">
                        <input type="hidden" asp-for="@Model.EventId" />

                        <div class="mb-3">
                            <label asp-for="@Model.Name" class="form-label fw-bold">Název</label>
                            <input asp-for="@Model.Name" class="form-control" required />
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.Location" class="form-label fw-bold">Lokace</label>
                            <input asp-for="@Model.Location" class="form-control" required />
                            <span asp-validation-for="@Model.Location" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.Date" class="form-label fw-bold">Datum</label>
                            <input asp-for="@Model.Date" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="@Model.Date" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.Capacity" class="form-label fw-bold">Kapacita</label>
                            <input asp-for="@Model.Capacity" class="form-control" type="number" required />
                            <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.Description" class="form-label fw-bold">Popis</label>
                            <textarea asp-for="@Model.Description" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Uložit změny</button>
                            <a asp-area="Admin" asp-controller="Event" asp-action="EventList" class="btn btn-secondary">Zpět</a>
                        </div>
                    </form>
                </div>

              
            </div>
        </div>
    </div>
</div>

