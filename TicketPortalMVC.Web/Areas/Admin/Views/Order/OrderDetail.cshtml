@model OrderViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container my-5">
    <h2 class="mb-4">Order Details</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <p><strong>Order ID:</strong> @Model.OrderId</p>
            <p><strong>Order Date:</strong> @Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</p>
            <p><strong>Total Price:</strong> @Model.TotalPrice.ToString("C")</p>
        </div>

    </div>

    <h3 class="mt-4 mb-3">Tickets</h3>
    <table class="table table-striped table-bordered">
        <thead class="table-light">
        <tr>
            <th>Ticket Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var orderTicket in Model.OrderTickets)
        {
            <tr>
                <td>@orderTicket.TicketId</td>
                <td>@orderTicket.Ticket.Price.ToString("C")</td>
                <td>@orderTicket.Quantity</td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-end">
        <a href="@Url.Action("Index", "Order", new { area = "Admin" })" class="btn btn-primary">Back to Orders</a>
    </div>
</div>