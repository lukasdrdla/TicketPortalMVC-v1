@model Ticket

@{
Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <!-- Hlavička karty -->
                <div class="card-header bg-gradient-primary text-dark text-center py-4">
                    <h3 class="card-title mb-0">Detail lístku: @Model.Event.Name</h3>
                </div>

                <!-- Tělo karty -->
                <div class="card-body p-4">
                    <!-- Název -->
                    <div class="mb-3">
                        <h5 class="fw-semibold">Název:</h5>
                        <p class="text-muted">@Model.Event.Name</p>
                    </div>
                    
                    <!-- Cena -->
                    <div class="mb-3">
                        <h5 class="fw-semibold">Cena:</h5>
                        <p class="text-muted">@Model.Price</p>
                    </div>
                    
                    <!-- Typ -->
                    <div class="mb-3">
                        <h5 class="fw-semibold">Typ:</h5>
                        <p class="text-muted">@Model.Type</p>
                    </div>
                    
                    <!-- Datum a čas -->
                    <div class="mb-3">
                        <h5 class="fw-semibold">Datum a čas:</h5>
                        <p class="text-muted">@Model.Event.Date</p>
                    </div>
                    


                    <!-- Akce -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-area="Admin" asp-controller="Ticket" asp-action="TicketEdit" asp-route-id="@Model.TicketId" class="btn btn-primary px-4">
                            <i class="bi bi-pencil"></i> Upravit
                        </a>
                        <a asp-area="Admin" asp-controller="Ticket" asp-action="TicketList" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Zpět
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

