@model Store

@{
Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <!-- Hlavička karty -->
                <div class="card-header bg-gradient-primary text-dark text-center py-4">
                    <h3 class="card-title mb-0">Detail obchodu: @Model.Name</h3>
                </div>

                <!-- Tělo karty -->
                <div class="card-body p-4">
                    <!-- Adresa -->
                    <div class="mb-3">
                        <h5 class="fw-semibold">Adresa:</h5>
                        <p class="text-muted">@Model.Address</p>
                    </div>

                    <!-- Město -->
                    <div class="mb-3">
                        <h5 class="fw-semibold">Město:</h5>
                        <p class="text-muted">@Model.City</p>
                    </div>

                    <!-- Telefon -->
                    <div class="mb-3">
                        <h5 class="fw-semibold">Telefon:</h5>
                        <p class="text-muted">@Model.Phone</p>
                    </div>

                    <!-- Otevírací hodiny -->
                    <div class="mb-3">
                        <h5 class="fw-semibold">Otevírací hodiny:</h5>
                        <p class="text-muted">@Model.OpeningHours</p>
                    </div>

                    <!-- Akce -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-area="Admin" asp-controller="Store" asp-action="StoreEdit" asp-route-id="@Model.StoreId" class="btn btn-primary px-4">
                            <i class="bi bi-pencil"></i> Upravit
                        </a>
                        <a asp-area="Admin" asp-controller="Store" asp-action="StoreList" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Zpět
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
