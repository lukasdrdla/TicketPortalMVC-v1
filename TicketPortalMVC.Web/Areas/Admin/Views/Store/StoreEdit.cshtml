@model StoreViewModel

@{
Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg">
                <!-- Hlavička karty -->
                <div class="card-header bg-gradient-primary text-dark text-center py-4">
                    <h3 class="card-title mb-0">Úprava obchodu: @Model.Name</h3>
                </div>

                <!-- Tělo karty -->
                <div class="card-body p-4">
                    <form asp-area="Admin" asp-action="StoreEdit" method="post">
                        <input type="hidden" asp-for="StoreId" />
                        <!-- Název -->
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">Název obchodu</label>
                            <input asp-for="Name" class="form-control" placeholder="Zadejte nový název obchodu"/>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Adresa -->
                        <div class="form-group mb-4">
                            <label asp-for="Address" class="form-label fw-semibold">Adresa</label>
                            <input asp-for="Address" class="form-control" placeholder="Zadejte adresu obchodu"/>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <!-- Město -->
                        <div class="form-group mb-4">
                            <label asp-for="City" class="form-label fw-semibold">Město</label>
                            <input asp-for="City" class="form-control" placeholder="Zadejte město"/>
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>

                        <!-- Telefon -->
                        <div class="form-group mb-4">
                            <label asp-for="Phone" class="form-label fw-semibold">Telefon</label>
                            <input asp-for="Phone" class="form-control" placeholder="Zadejte telefonní číslo"/>
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <!-- Otevírací hodiny -->
                        <div class="form-group mb-4">
                            <label asp-for="OpeningHours" class="form-label fw-semibold">Otevírací hodiny</label>
                            <textarea asp-for="OpeningHours" class="form-control" rows="5" placeholder="Např. Po-Pá: 9:00-18:00"></textarea>
                            <span asp-validation-for="OpeningHours" class="text-danger small"></span>
                        </div>

                        <!-- Tlačítka -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle"></i> Uložit změny
                            </button>
                            <a asp-area="Admin" asp-controller="Store" asp-action="StoreList" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Zpět
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
